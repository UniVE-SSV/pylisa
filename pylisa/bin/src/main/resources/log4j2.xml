<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="DefaultLoggingConf">
	<Properties>
        <Property name="basePath">C:\\Users\\Nicol√≤\\Desktop\\pylisa\\pylisa\\src\\test\\resources\\pyTest</Property>
    </Properties>
	<Appenders>
		<Console name="console">
			<PatternLayout pattern="%d %5level %c - %m %ex%n"/>
		</Console>
	</Appenders>

    <Appenders>
        <RollingFile name="fileLogger" fileName="${basePath}/tree.lisp" filePattern="${basePath}/app-info-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
 
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>
    </Appenders>
  
	<Loggers>
		<Logger name="it.unive.pylisa" level="DEBUG" >
            <appender-ref ref="fileLogger" level="debug" />
        </Logger>
        
		<Root level="DEBUG">
			<AppenderRef ref="console" level="DEBUG"/>
			<AppenderRef ref="fileAppender" level="DEBUG"/>
		</Root>
	</Loggers>
</Configuration>

